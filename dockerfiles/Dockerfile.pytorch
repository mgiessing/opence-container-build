ARG BASE_IMG

FROM ${BASE_IMG}
ARG GPU_CPU
RUN micromamba install -y -n base \
    pytorch${GPU_CPU} \
    numpy \
    scipy \
    pandas \
    scikit-learn \
    opencv \
    wget \
    matplotlib \
    spacy && \
    pip3 install fastai && \
    micromamba clean --all --yes

ENTRYPOINT ["/usr/local/bin/_entrypoint.sh", "python3"]

