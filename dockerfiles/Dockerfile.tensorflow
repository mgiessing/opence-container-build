ARG BASE_IMG

FROM ${BASE_IMG}
ARG GPU_CPU
RUN micromamba install -y -n base \
    tensorflow${GPU_CPU} \
    tf2onnx \
    numpy \
    scipy \
    pandas \
    scikit-learn \
    skl2onnx \
    lightgbm \
    xgboost \
    opencv \
    wget \
    matplotlib \
    spacy && \
    micromamba clean --all --yes

ENTRYPOINT ["/usr/local/bin/_entrypoint.sh", "python3"]
